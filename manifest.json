{
  "manifest_version": 2,
  "name": "QR-link",
  "version": "1.0",

  "description": "Gives a window with QR-link to a current site (address row)",
  "homepage_url": "https://github.com/akakyi/qr_link_ffirefox",

  "icons": {
    "48": "logo_48.png",
    "96": "logo_96.png"
  },

  "permissions": ["activeTab"],

  "browser_action": {
    "default_icon": "logo_48.png",
    "default_title": "QR link",
    "default_popup": "popup/qr_window.html"
  }
}
